{
  "compilerOptions": {
    "module": "Node16",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowJs": true,
    "target": "ES6",
    "moduleResolution": "Node"
  },
  "include": ["src/**/*", "server.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically, explained below
    "esm": true
  }
}
